<h1 class="text-4xl font-bold text-gray-900 mb-6 pt-6 ">Your Score: <%= @score %></h1>

<div class="mb-6">
  <h2 class="text-xl font-semibold text-gray-800 mb-2">Quiz Summary</h2>
  <p>Correct Answers: <%= @correct_count %> out of <%= @total_questions %></p>
  <p>Percentage Correct: <%= @correct_percentage %>%</p>
</div>

<%= form_with model: @user_score, url: submit_feedback_quiz_path(@quiz), method: :put, local: true do |form| %>
  <div class="mb-6">
    <%= form.label :user_feedback, "Please provide your feedback", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :user_feedback, rows: 4, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50" %>
  </div>
  <div class="flex align-center justify-center">
    <div class="mr-4">
      <%= form.submit "Submit Feedback", class: "btn-lg" %>
    </div>
    <div>
      <%= link_to 'Back to Quizzes', quizzes_path, class: "btn-lg-2 block" %>
    </div>
  </div>
<% end %>
