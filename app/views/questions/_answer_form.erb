<li class="nested-form-wrapper bg-white border border-gray-300 rounded-md p-4 mb-4 flex flex-col space-y-4" data-new-record="<%= form.object.new_record? %>">
  <div class="flex items-center space-x-4">
    <div class="w-full">
      <div class="mb-2">
        <%= form.label :answer_text, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :answer_text, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 sm:text-sm" %>
      </div>
    </div>
    <div class="flex items-center space-x-2">
      <%= form.check_box :correct, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
      <%= form.label :correct, class: "text-sm font-medium text-gray-700" %>
    </div>
  </div>

  <div class="flex justify-end">
    <button type="button" data-action="nested-form#remove" class="btn-sm-delete">
      Remove answer
    </button>
  </div>

  <%= form.hidden_field :_destroy %>
</li>
