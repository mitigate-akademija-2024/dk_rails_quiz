<h1>My Quizzes</h1>

<% if @quizzes.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @quizzes.each do |quiz| %>
        <tr>
          <td><%= quiz.title %></td>
          <td><%= quiz.created_at.strftime('%B %d, %Y') %></td>
          <td>
            <%= link_to 'View', quiz_path(quiz) %>
            <%= link_to 'Edit', edit_quiz_path(quiz) %>
            <%= link_to 'Delete', quiz_path(quiz), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You haven't created any quizzes yet.</p>
<% end %>

<%= link_to 'Create New Quiz', new_quiz_path %>
