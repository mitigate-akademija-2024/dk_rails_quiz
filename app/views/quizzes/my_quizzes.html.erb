<h2 class="text-2xl font-bold mb-6 text-center">My Quizzes</h2>
<% if @quizzes.any? %>
  <div class="relative overflow-x-auto mb-6">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">Title</th>
          <th scope="col" class="px-6 py-3">Created At</th>
          <th scope="col" class="px-6 py-3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @quizzes.each do |quiz| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= quiz.title %></td>
            <td class="px-6 py-4"><%= quiz.created_at.strftime('%B %d, %Y') %></td>
            <td class="px-6 py-4 space-x-2">
              <%= link_to 'View', quiz_path(quiz), class: "btn-sm" %>
              <%= link_to 'Edit', edit_quiz_path(quiz), class: "btn-sm" %>
              <%= link_to 'Delete', quiz_path(quiz), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm-delete" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-gray-600 dark:text-gray-400">You haven't created any quizzes yet.</p>
<% end %>
<div class="flex justify-end">
  <%= link_to 'Create New Quiz', new_quiz_path, class: "btn-md" %>
</div>
